

<div class="header" class="md-block" flex-gt-sm>
    <h1>Filter Data</h1>
    <h3>This page is set up to allow you to manipulate the attendance list</h3>
    <h4>You can sort by alphabetical order or by date</h4>
</div>




<div layout-xs="column">
    <div class="filterButtons" layout="row" layout-align="space-between center" layout-xs="column">
        <div ng-hide="hideNameSortImages">
            <md-icon ng-show="nameImageUP"><%= image_tag('ic_arrow_drop_down_black_24px.svg')%></md-icon>
            <md-icon ng-hide="nameImageUP"><%= image_tag('ic_arrow_drop_up_black_24px.svg')%></md-icon>
        </div>
        <md-button class="md-raised" flex ng-click="filterName()">
            Name
        </md-button>

        <md-button class="md-raised" flex ng-click="filterDate()">
            Date
        </md-button>
        <div ng-show="hideNameSortImages">
            <md-icon ng-show="dateImageUP"><%= image_tag('ic_arrow_drop_down_black_24px.svg')%></md-icon>
            <md-icon ng-hide="dateImageUP"><%= image_tag('ic_arrow_drop_up_black_24px.svg')%></md-icon>
        </div>

    </div>
    <div class="registeredGuestList" >
        <md-list >
            <md-subheader> <h2>Attendance</h2></md-subheader>
            <md-divider hide-xs></md-divider>
            <md-list-item layout-align="space-between center" layout-xs="column" class="listItem" ng-repeat="items in entries | orderBy:sortByElement:sortReversed">
                <span flex><h3>{{items.name}}</h3> </span>
                <span flex> <h4>{{items.createdAt}}</h4></span>
                <md-divider hide-xs></md-divider>
            </md-list-item>
        </md-list>
    </div>
</div>

